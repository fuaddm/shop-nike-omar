{
  "name": "shop-selfcare",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "lint": "cross-env NODE_ENV=production eslint app --ext .js,.ts,.tsx",
    "lintdev": "eslint app --ext .js,.ts,.tsx",
    "format": "prettier --list-different --write \"app/**/*.{js,ts,tsx,jsx,json,css,scss,md}\"",
    "check": "npm run lint && npm run format",
    "prepare": "husky"
  },
  "dependencies": {
    "@medusajs/js-sdk": "^2.8.8",
    "@medusajs/types": "^2.8.8",
    "@react-router/node": "^7.7.1",
    "@react-router/serve": "^7.7.1",
    "clsx": "^2.1.1",
    "isbot": "^5.1.27",
    "lucide-react": "^0.536.0",
    "react": "^19.1.0",
    "react-aria-components": "^1.11.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.7.1",
    "swiper": "^11.2.10",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@react-router/dev": "^7.7.1",
    "@tailwindcss/vite": "^4.1.4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=production eslint --fix",
      "prettier --list-different --write"
    ],
    "*.{json,css,md}": [
      "prettier --list-different --write"
    ]
  }
}
